{
  "name": "vibe-kanban",
  "version": "0.1.8",
  "private": true,
  "bin": {
    "vibe-kanban": "npx-cli/bin/cli.js"
  },
  "files": [
    "npx-cli/bin/cli.js",
    "npx-cli/dist/**"
  ],
  "scripts": {
    "lint": "pnpm run frontend:lint && pnpm run backend:lint",
    "format": "cargo fmt --all && cd frontend && pnpm run format",
    "check": "pnpm run frontend:check && pnpm run backend:check",
    "dev": "node scripts/dev.js",
    "test:npm": "./test-npm-package.sh",
    "frontend:lint": "cd frontend && pnpm run lint",
    "frontend:dev": "node scripts/run-frontend-dev.js",
    "frontend:check": "cd frontend && pnpm run check",
    "backend:lint": "cargo clippy --workspace --all-targets --features qa-mode -- -D warnings",
    "backend:dev": "node scripts/run-backend-standalone.js",
    "backend:check": "cargo check",
    "backend:dev:watch": "node scripts/run-backend-dev.js",
    "dev:qa": "node scripts/dev.js --qa",
    "generate-types": "cargo run --bin generate_types",
    "generate-types:check": "cargo run --bin generate_types -- --check",
    "prepare-db": "node scripts/prepare-db.js",
    "prepare-db:check": "node scripts/prepare-db.js --check",
    "build:npx": "bash ./local-build.sh",
    "prepack": "pnpm run build:npx"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "vite": "^6.3.5"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.13.1"
}
